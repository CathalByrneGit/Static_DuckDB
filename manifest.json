{
  "manifest_version": 3,
  "name": "PXStat Workbench",
  "version": "1.0",
  "description": "Analyze CSO data with DuckDB",
  "permissions": ["menus", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "pxstat_duckdb@example.com",
      "data_collection_permissions": {
        "required": ["none"] 
      }
    }
  },
  "host_permissions": [
    "https://ws.cso.ie/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*",
    "https://*.openai.com/*",
    "https://huggingface.co/*",
    "https://*.huggingface.co/*",
    "https://cdn.jsdelivr.net/*"
  ],
  
  "action": {
    "default_icon": {
      "48": "icons/duckdb-48.svg",
      "96": "icons/duckdb-96.svg"
    },
    "default_title": "PXStat Workbench"
  },
  
  "options_ui": {
    "page": "dist/pages/index.html",
    "open_in_tab": true
  },
  
  "commands": {
    "open-workbench": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Open PXStat Workbench"
    }
  },
  
  "icons": {
    "48": "icons/duckdb-48.svg",
    "96": "icons/duckdb-96.svg"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "export/lib/*.wasm",
        "export/lib/*.worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self' blob:;"
  },
 
  
  "background": {
    "scripts": ["dist/background.js"],
    "type": "module"
  }

}
